<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>fgdfg</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body id="home">
    <h1>Eulenm√ºhle Spende</h1>
    <canvas id="imageCanvas" width="1333" height="750"></canvas>
    <form id="donationForm" method="post">
      <input
        type="text"
        name="name"
        id="donorName"
        placeholder="Ihr Name"
        required />
      <input
        type="number"
        name="amount"
        id="donationAmount"
        placeholder="Betrag in EUR"
        required />
      <button
        type="submit"
        name="paymentMethod"
        value="paypal"
        id="paypalButton">
        PayPal
      </button>
      <button
        type="submit"
        name="paymentMethod"
        value="stripe"
        id="stripeButton">
        Stripe
      </button>
    </form>
    <canvas id="offscreenCanvas" width="1333" height="750"></canvas>

    <script src="/js/revealPixels.js"></script>
    <script>
      const form = document.getElementById('donationForm');

      form.addEventListener('submit', (e) => {
        const paymentMethod = e.submitter.value;

        if (paymentMethod === 'paypal') {
          form.action = '/pay-paypal';
        }
        if (paymentMethod === 'stripe') {
          form.action = '/pay-stripe';
        }
      });
    </script>
  </body>
</html>
